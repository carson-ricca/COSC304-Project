<div class="container-fluid">
    <div class="row my-3">
        <div class="col-md-6">
            <h3>Administrator Sales Report by Day</h3>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Total Order Amount</th>
                </tr>
                </thead>
                <tbody>
                {{#each sales}}
                    <tr>
                        <td>{{dateOrdered}}</td>
                        <td>${{fixed totalAmountEarned 2}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

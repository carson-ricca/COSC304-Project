<div class="container-fluid">
    <div class="row my-3">
        <div class="col-md-2"></div>
        <div class="col-md-8 text-center">
            <h3>Your Order History</h3>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row justify-content-center my-3">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Date Ordered</th>
                    <th>Total Amount</th>
                </tr>
                </thead>
                <tbody>
                {{#each orders}}
                    <tr>
                        <td>{{orderId}}</td>
                        <td>{{orderDate}}</td>
                        <td>{{totalAmount}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<h1>Enter required information to complete the transaction:</h1>
{{#if invalid}}
<div class="alert alert-danger">{{invalid}}</div>
{{/if}}

<form method="get" action="order">
    <div class="form-group">
        <label for="user">Username</label>
        <input class="form-control" type="text" name="customerId" size="50" id="user">
    </div>
    <div class="form-group">
        <label for="pass">Password</label>
        <input class="form-control" type="password" name="customerPass" id="pass">
    </div>
    <div class="form-group">
        <label for="payment">Payment Method</label>
        <select class="form-control" name="payment" required>
            {{#each paymentMethods}}
                <option>{{paymentMethodFormat this}}</option>
            {{/each}}
        </select>
        <small class="form-text text-muted"><a href="/addPaymentMethod">Add a new Payment Method</a></small>
    </div>

    <input type="submit" class="btn btn-primary" value="Submit">
    <input class="btn btn-primary" type="reset" value="Reset">
</form>

<h1>Please Provide the information of your new payment method</h1>
{{#if invalid}}
<div class="alert alert-danger">{{invalid}}</div>
{{/if}}

{{#if valid}}
    <div class="alert alert-success">{{valid}}</div>
{{/if}}

<form method="post">
    <div class="form-group">
        <label for="paymentType">Payment Type</label>
        <select class="form-control" type="text" name="paymentType" id="paymentType">
            <option>Debit Card</option>
            <option>Credit Card</option>
            <option>PayPal</option>
            <option>Bitcoin</option>
            <option>Cash</option>
        </select>
    </div>
    <div class="form-group">
        <label for="paymentNumber">Payment/Card Number</label>
        <input class="form-control" type="text" name="paymentNumber" id="paymentNumber">
    </div>
    <div class="form-group">
        <label for="expiryDate">Expiry Date</label>
        <input class="form-control" type="month" name="expiryDate" id="expiryDate">
    </div>
    <input type="submit" class="btn btn-primary" value="Submit">
    <input class="btn btn-primary" type="reset" value="Reset">
</form>
